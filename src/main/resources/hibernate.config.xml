<?xml version="1.0" encoding="utf-8"?>
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL82Dialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">m</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/b1_db</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="show_sql">true</property>

        <!-- MAPPINGS -->
        <mapping class="com.example.demo.Repository.AuthorEntity"/>
        <mapping class="com.example.demo.Repository.BookEntity"/>
    </session-factory>

</hibernate-configuration>